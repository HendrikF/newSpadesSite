{% extends 'AppBundle:default:posts.html.twig' %}

{% block content %}

<p class="blog-meta">
    {% if postCount == 0 %}
        There are <strong>no</strong> posts tagged <strong>{{ tag.title }}</strong>.
    {% elseif postCount == 1 %}
        There is <strong>one</strong> post tagged <strong>{{ tag.title }}</strong>.
    {% else %}
        There are <strong>{{ postCount }}</strong> posts tagged <strong>{{ tag.title }}</strong>.
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('tag-edit', {title: tag.title}) }}" title="Edit Tag" class="pull-right btn btn-primary btn-xs">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <span class="sr-only">Edit Tag</span>
        </a>
    {% endif %}
</p>

{{ parent() }}

{% endblock %}
