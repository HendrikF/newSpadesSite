<article>
    <header>
        <h1>
            <a href="{{ path('blog-post', {slug: post.slug}) }}" id="{{ post.slug }}">
                {{ post.title }}
            </a>
        </h1>
        <p class="blog-meta">
            Published by {{ post.author.username }} on {{ post.published|date('l, jS F Y') }}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('blog-edit', {slug: post.slug}) }}" title="Edit Post" class="pull-right btn btn-primary btn-xs">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    <span class="sr-only">Edit Post</span>
                </a>
            {% endif %}
        </p>
    </header>
    <main>
        {{ post.content|markdown }}
    </main>
    <footer>
        <p>
            {% for tag in post.tags %}
                <a href="{{ path('tag', {title: tag.title}) }}" class="post-tag label label-primary">
                    <span class="glyphicon glyphicon-tag" aria-hidden="true"></span>
                    {{ tag.title }}
                </a>
            {% else %}
                <span class="text-muted">Not tagged.</span>
            {% endfor %}
        </p>
    </footer>
</article>
