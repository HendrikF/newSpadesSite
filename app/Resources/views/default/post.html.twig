{% extends 'base.html.twig' %}

{% block content %}

<h2>{{ post.title }}</h2>
<p class="blog-post-meta">Published on {{ post.published|date('l, jS F Y') }}</p>
{{ post.content|markdown }}
<p>
  {% if post.tags is not empty %}
    <span class="text-muted">Tagged:</span>
  {% else %}
    <span class="text-muted">Not tagged.</span>
  {% endif %}
  {% for tag in post.tags %}
    <a href="{{ path('tag', {title: tag.title}) }}" class="label label-primary"><span class="glyphicon glyphicon-tag" aria-hidden="true"></span> {{ tag.title }}</a>
  {% endfor %}
</p>

<a href="{{ path('blog') }}" class="btn btn-default"><span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span> Back to blog</a>

{% endblock %}
