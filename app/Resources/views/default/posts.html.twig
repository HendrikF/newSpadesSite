{% extends 'base.html.twig' %}

{% block precontent %}

<div class="jumbotron">
    <div class="container">
        <img src="{{ asset('images/player.png') }}" alt="The Player" width="200" class="pull-right" />
        <h1>NewSpades</h1>
        <p>NewSpades is a first person shooter (FPS) inspired by Ace of Spades.<br />
            <em>It&rsquo;s open source!</em></p>
        <p><a class="btn btn-primary btn-lg" href="{{ path('about') }}">Learn more</a></p>
    </div>
</div>

{% endblock %}

{% block content %}

  {% for post in posts %}
    <h2><a href="{{ path('blog-post', {slug: post.slug}) }}">{{ post.title }}</a></h2>
    <p class="blog-post-meta">Published on {{ post.published|date('l, jS F Y') }}.</p>
    {{ post.content|markdown }}
    <p>
      {% for tag in post.tags %}
        <a href="{{ path('tag', {title: tag.title}) }}" class="label label-primary"><span class="glyphicon glyphicon-tag" aria-hidden="true"></span> {{ tag.title }}</a>
      {% endfor %}
    </p>
    <hr />
  {% else %}
    <div class="alert alert-info"><em>There are no blog posts.</em></div>
  {% endfor %}

<nav>
    <ul class="pagination">
        <li class="disabled">
            <span>
                <span class="glyphicon glyphicon glyphicon-menu-left" aria-hidden="true"></span>
            </span>
        </li>
        <li class="active"><span>1 <span class="sr-only">(current)</span></span></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li>
            <a href="#" aria-label="Next">
                <span class="sr-only">Next</span>
                <span class="glyphicon glyphicon glyphicon-menu-right" aria-hidden="true"></span>
            </a>
        </li>
    </ul>
</nav>

{% endblock %}
